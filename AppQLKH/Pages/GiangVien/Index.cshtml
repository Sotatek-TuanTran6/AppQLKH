@model AppQLKH.Pages.GiangVien.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Giảng viên</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GiangVien[0].MaGV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiangVien[0].HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiangVien[0].DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiangVien[0].NgaySinh)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GiangVien)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaGV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.MaGV">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.MaGV">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.MaGV">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

